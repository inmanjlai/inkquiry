html
    head
        meta(name="viewport" content="width=device-width,initial-scale=1")
        link(rel='preconnect', href='https://fonts.googleapis.com')
        link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Croissant+One&display=swap', rel='stylesheet')
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0")
        script(defer)
            include ./scripts/dropdown.js
        style
            include ./styles/styles.css
        title="Inkuiry"
    body
        nav
            a.logo(href="/")
                h3="Inkuiry"
            div.sets
                h3="Sets"
                    span.material-symbols-rounded="keyboard_arrow_down"
                div.dropdown
                    each set in sets
                        form(method="GET" action=`/sets/${set.code}`)
                            button=set.name
        main
            form.searchbar(method="POST" action="/cards")
                input(type="text" placeholder="Search for a card..." name="cardName")
                button 
                    span.material-symbols-rounded="arrow_forward"